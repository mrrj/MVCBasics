@{
    ViewData["Title"] = "Guessing Game";
}

<h1>Guessing Game</h1>

<p>Make a guess for a number between 0 and 100.</p>

<form asp-action="GuessingGame" method="post">
    <input type="number" id="number" name="number" min="0" max="100" />
    <input type="submit" value="Submit">
</form>

@if(ViewBag.Message != null)
            {
                <p>@ViewBag.Message</p>
            }